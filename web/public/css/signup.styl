html
	background: url(../images/bg/bg.png) no-repeat center center fixed
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: cover
	overflow-x: hidden

body
	font-family: 'Calibri', 'Helvetica', sans-serif

#signup_box
	margin-top: 30px
	margin-left: auto
	margin-right: auto
	width: 450px
	padding: 30px 0 10px 0


#breakit_logo
	width: inherit

	img
		width: 450px
		opacity: 0.6

#signup_tab
	text-shadow: 0 1px white
	border: 1px solid #c9c9c9
	width: 450px
	height: 200px
	position: absolute
	top: 35%
	left: 50%
	margin-left: -230px
	padding: 10px 15px 10px
	text-aling: center
	background: #ffffff
	background: -moz-radial-gradient(center, ellipse cover, #ffffff 0%, #e5e5e5 100%)
	background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#ffffff), color-stop(100%,#e5e5e5))
	background: -webkit-radial-gradient(center, ellipse cover, #ffffff 0%,#e5e5e5 100%)
	background: -o-radial-gradient(center, ellipse cover, #ffffff 0%,#e5e5e5 100%)
	background: -ms-radial-gradient(center, ellipse cover, #ffffff 0%,#e5e5e5 100%)
	background: radial-gradient(ellipse at center, #ffffff 0%,#e5e5e5 100%)
	/*filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#e5e5e5',GradientType=1 )*/
	border-radius: 5px
	-moz-border-radius: 5px
	-webkit-border-radius: 5px
	box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.80)
	-moz-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.80)
	-webkit-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.80)


	h1
		font-size: 175%
		font-weight: bold
		letter-spacing: -0.05em
		line-height: 1.2
		color: #333333
		padding-left: 12px

	p
		font-size: 115%
		color: #666
		font-weight: bold
		letter-spacing: -0.075em
		margin: -5px 0 .5em 55px

#story_tab
	padding-left: 25px
	width: 60%
	float: left

#confirm_tab
	padding-left: 20px
	width: 100%

	a
		font-weight: bold
		color: #ffffff
		margin-bottom: 10px
		text-decoration: none

#signup_form
	width: 100%
	height: inherit
	padding: 8px 0 25px 70px
	margin-right: -30px


	form
		font-size: 16px
		font-weight: bold
		color: #666666

		label
			margin-right: 5px
			padding: 5px

		#submit
			margin-left: 20px
			width: 46px
			text-align: center

		input#email
			width: 236px

#hire
	margin: 27px 0 5px -60px

	a
		text-decoration: none
		color: #333333
		font-size: 95%
		font-weight: bold

#copyright
	font-size: 10px
	color: #333333
	position: fixed
	bottom: 0px
