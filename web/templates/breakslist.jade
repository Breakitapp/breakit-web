extend layout
block contents
	for break_ in breaks
		p= "Break id: " + break_._id + ", headline: " + break_.headline + ", user: " + break_.user + ", created: " + break_.date + ", score: " + break_.score + ", comment count: " + break_.comments.length
		form(name="input1", action="/breaks/vote", method="post")
			input(type="hidden", name="breakId", value=break_._id)
			input(type="hidden", name="which", value="up")
			input(type="submit", value="Upvote")
		form(name="input2", action="/breaks/vote", method="post")
			input(type="hidden", name="breakId", value=break_._id)
			input(type="hidden", name="which", value="down")
			input(type="submit", value="Downvote")